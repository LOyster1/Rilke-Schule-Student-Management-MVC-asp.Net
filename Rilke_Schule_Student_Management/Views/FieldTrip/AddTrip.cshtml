@model Rilke_Schule_Student_Management.Models.FieldTrip
@{
    ViewBag.Title = "Add Trip";

}

<h2>@ViewBag.Title</h2>

<!--------TO DO: make the tags "Html.TextBoxFor" to reflect fields representing Times and Dates for appropriate fields---->

@using (Html.BeginForm("AddTrip", "FieldTrip", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.TripName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TripName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.TripName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SubmitByDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.SubmitByDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.SubmitByDate)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TripDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.TripDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.TripDate)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ChapperoneArrivalTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ChapperoneArrivalTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ChapperoneArrivalTime)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DepartureTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.DepartureTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.DepartureTime)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReturnTime, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.ReturnTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ReturnTime)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Transportation, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Transportation, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Transportation)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Class_Id, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Class_Id, ViewData["classId"] as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Class_Id)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add Trip" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




