@model Rilke_Schule_Student_Management.Models.student
@{
    ViewBag.Title = "Add Student";
    //Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Add Student</h2>
<form>
    <div class="form-group">
        @Html.LabelFor(m =>m.Student_First_Name)
        @Html.TextBoxFor(m=>m.Student_First_Name, new { @class ="form-control" })
        @Html.ValidationMessageFor(m => m.Student_First_Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student_Last_Name)
        @Html.TextBoxFor(m => m.Student_Last_Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student_Last_Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date_Of_Birth)
        @Html.EditorFor(m => m.Date_Of_Birth, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Date_Of_Birth)
    </div>
    <button type="submit" value="Add Student" class="btn btn-primary">Add Student</button>

</form>
