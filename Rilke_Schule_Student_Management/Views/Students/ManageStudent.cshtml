@model IEnumerable<Rilke_Schule_Student_Management.Models.Student>

@{
    ViewBag.Title = "Manage Student";
}

<h2>Manage Student</h2>

<p>
    @Html.ActionLink("Back", "Index", "Manage")
</p>

<p>
    @Html.ActionLink("Add New Student", "AddStudent", "Students")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Stud_F_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stud_L_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_Of_Birth)
        </th>
        <th></th>
    </tr>

@if (Model != null)
{

    foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Stud_F_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stud_L_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_Of_Birth)
        </td>
        <td>
            @using (Html.BeginForm("DeleteStudent", "Students", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <input type="text" name="studentId" class="hidden" value="@item.Student_Number">
                <input type="submit" class="btn btn-default" value="Delete"/>
            }
        </td>

    </tr>
    }
}



</table>